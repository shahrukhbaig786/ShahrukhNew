            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"><!-- Start of Parent LinerLayout  -->


            <LinearLayout
                android:id="@+id/layout1_case1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"><!-- Start of CASE1 LinerLayout  -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Caller"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/case1_caller_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/custom_list_dp"
                    android:cursorVisible="true"
                    android:drawablePadding="20dp"
                    android:inputType="number"
                    android:paddingLeft="20dp"
                    android:text="SDJdfjk"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Description"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/case1_description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/custom_list_dp"
                    android:cursorVisible="true"
                    android:drawablePadding="20dp"
                    android:hint="Write the Description Here "
                    android:paddingLeft="20dp"
                    android:textSize="14dp" />


            </LinearLayout><!-- Close of CASE 1 LinerLayout  -->

            <LinearLayout
