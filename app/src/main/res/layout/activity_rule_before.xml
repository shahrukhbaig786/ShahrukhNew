                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="60dp"
                    android:ellipsize="marquee"
                    android:entries="@array/coming_soon"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#1b1b1b"></Spinner>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="No input Sound"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/case2_no_input_sound_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="60dp"
                    android:ellipsize="marquee"

                    android:entries="@array/coming_soon"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#1b1b1b"></Spinner>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Wrong input Sound"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/case2_wrong_input_sound_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="1dp"
                    android:layout_marginBottom="60dp"
                    android:ellipsize="marquee"
                    android:entries="@array/coming_soon"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#1b1b1b"></Spinner>


            </LinearLayout><!-- END  of CASE2 LinerLayout  -->


            <LinearLayout
