                    android:entries="@array/coming_soon"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:spinnerMode="dropdown"
                    android:textColor="#1b1b1b"></Spinner>

                <TextView
                    android:layout_width="wrap_content"
