<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:clickable="true">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="vertical"
        app:cardElevation="2dp"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_dummy"
                android:layout_width="@dimen/custom_list_dp"
                android:layout_height="@dimen/custom_list_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:src="@drawable/dummy_agent"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="5">


                    <TextView
                        android:id="@+id/agent_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:gravity="left|center|center_horizontal"
                        android:text="Shahrukh Baig"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/agent_active_or_not"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/agent_name"
                        android:layout_weight="1"
                        android:gravity="right|bottom"
                        android:text="Active"
                        android:textColor="@color/srk_active"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <!--
                                <TextView
                                    android:id="@+id/agent_sipname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:text="sip_username"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />

                                <TextView
                                    android:id="@+id/agent_passwordt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:text="sip_password"
                                    android:textSize="10dp"
                                    android:textStyle="bold"
                                    android:visibility="invisible" />
                    -->
                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
