<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0dee7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text=" Agent Info"
            android:textColor="@android:color/background_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/agent_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agent Name"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/agent_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_list_dp"

            android:cursorVisible="true"
            android:drawablePadding="20dp"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/sip_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sip Username"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/agent_sip_username"

            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_list_dp"
            android:cursorVisible="true"
            android:drawablePadding="20dp"

            android:textSize="14dp" />


        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/agent_password"
            style="@style/cursor_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_list_dp"
            android:cursorVisible="true"
            android:drawablePadding="20dp"


            android:textSize="14dp" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/agent_mobile"
            style="@style/cursor_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_list_dp"
            android:cursorVisible="true"
            android:drawablePadding="20dp"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/acc_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Account Status"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/acc_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Account Added on"

                android:textSize="16dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/agent_active_or_Inactive"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:layout_marginBottom="60dp"
                android:layout_weight="1"
                android:ellipsize="marquee"

                android:gravity="left"
                android:paddingLeft="10dp"
                android:popupBackground="#8861d7"
                android:spinnerMode="dropdown"
                android:textColor="#1b1b1b" />

            <TextView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:gravity="center"
                android:visibility="visible"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_agent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_button"

                android:text="Update" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
