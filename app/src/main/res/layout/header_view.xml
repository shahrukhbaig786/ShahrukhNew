<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/custom_bg"
    android:clickable="true"
    android:focusable="true"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bann"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.example.intel.virtual_receptionist.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_pic"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center|top"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/virtual_log"
                app:civ_border_color="@color/white_bg"
                app:civ_border_width="0.5dp" />

            <TextView
                android:id="@+id/money_in_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:drawableLeft="@drawable/rupee"
                android:paddingLeft="3dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp"
                android:text="Money"
                android:textColor="@color/white_bg"
                android:textSize="10sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:background="@null"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/txt_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="2dp"
                    android:paddingLeft="08dp"
                    android:text="Welcome "
                    android:textColor="@color/white_bg"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="2dp"
                    android:paddingBottom="9dp"
                    android:paddingLeft="08dp"
                    android:text="Email"
                    android:textColor="@color/white_bg"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/slider_minimize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:src="@drawable/backbutton"

                    ></ImageView>

            </RelativeLayout>

        </FrameLayout>

    </LinearLayout>


</FrameLayout>
