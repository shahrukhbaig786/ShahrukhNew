<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bann"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:orientation="vertical">
            <com.example.intel.virtual_receptionist.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginRight="15dp"
                android:layout_marginTop="58dp"
                android:src="@drawable/virtual_log"
                app:civ_border_color="@color/white_bg"
                app:civ_border_width="0.5dp" />

            <TextView

                android:id="@+id/money_in_bank"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="2dp"
                android:paddingLeft="3dp"
                android:paddingTop="20dp"
                android:paddingRight="25dp"
                android:text="Money"
                android:drawableLeft="@drawable/rupee"
                android:textColor="@color/white_bg"
                android:textSize="15sp"
                android:textStyle="bold" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"

                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_margin="2dp"
                    android:paddingLeft="23dp"
                    android:text="Welcome "

                    android:textColor="@color/white_bg"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_below="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_gravity="bottom|left"
                    android:paddingLeft="23dp"
                    android:text="Email"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white_bg"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/slider_minimize"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:src="@drawable/backbutton"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"

                    ></ImageView>

            </RelativeLayout>

           </FrameLayout>

</LinearLayout>



</FrameLayout>
